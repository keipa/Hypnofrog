@model IEnumerable<Hypnofrog.Models.ApplicationUser>
@using Microsoft.AspNet.Identity



<h2>@Resources.Resource.Users</h2>
<br />
<table class="table">
        <tr>
            <th>
                ID
            </th>
            <th>
                User Name
            </th>
            <th>
                Email
            </th>
            @if (User.Identity.IsAuthenticated)
            {
            <th>
                @Resources.Resource.delete
            </th>
            }
            @if ((bool)ViewBag.IsAdmin )
                {
                <th>
                    @Resources.Resource.makeadmin
                </th>
            }
            <th></th>
        </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    @item.Id
                </td>
                <th>
                    @Html.ActionLink(item.UserName, "UserProfile", new { userid = item.UserName })
                </th>
                <td>
                    @Html.ActionLink(item.Email, "UserProfile",  new { userid = item.UserName })
                </td>
                <td>
                    @if (User.Identity.Name == item.UserName || User.IsInRole("Admin"))
                    {
                        @Html.ActionLink(Resources.Resource.de, "Delete", new { id = item.Id })
                    }
                </td>
                <td>
                    @if ((bool)ViewBag.IsAdmin)
                        {
                        @Html.ActionLink(Resources.Resource.makeadmin, "UpInRole", new { id = item.Id })
                }
                </td>
            </tr>
    }

    </table>