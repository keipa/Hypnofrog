@model IEnumerable<Hypnofrog.Models.ApplicationUser>
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Пользователи";
}

<h2>Все пользователи</h2>
<br />
<table class="table">
        <tr>
            <th>
                ID
            </th>
            <th>
                User Name
            </th>
            <th>
                Email
            </th>
            @if (User.Identity.IsAuthenticated)
            {
            <th>
                Удалить
            </th>
            }
            @if ((bool)ViewBag.IsAdmin )
                {
                <th>
                    Повысить
                </th>
            }
            <th></th>
        </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    @item.Id
                </td>
                <th>
                    @Html.ActionLink(item.UserName, "UserProfile", new { userid = item.UserName })
                </th>
                <td>
                    @Html.ActionLink(item.Email, "UserProfile",  new { userid = item.UserName })
                </td>
                <td>
                    @if (User.Identity.Name == item.UserName || User.IsInRole("Admin"))
                    {
                        @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
                    }
                </td>
                <td>
                    @if ((bool)ViewBag.IsAdmin)
                        {
                        @Html.ActionLink("Повысить до админа", "UpInRole", new { id = item.Id })
                }
                </td>
            </tr>
    }

    </table>