@model Hypnofrog.DBModels.Page
@{
    Session["PageId"] = Model.PageId;
    ViewBag.Style = Model.Color == "dark" ? "dark" : Model.Color == "orange" ? "red" : "gray";
}
<link href="~/Content/@ViewBag.Style-theme.css" rel="stylesheet" />

<div class="row" style="margin-top:10px;">
    <div class="col-md-2 col-sm-2 col-xs-2">
        <a href="@Url.Action("EditSite", "Home", new { siteid = Model.SiteId}) " class="icons">
            <i class="fa fa-pencil-square-o"></i>
        </a>
    </div>
    <div class="col-md-6 col-sm-6 col-xs-6 col-md-offset-1 col-sm-offset-1 col-xs-offset-1">
        <div class="fr-view">
            @Html.Raw(Model.Title)
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="fr-view">
            @Html.Raw(Model.Contents.ElementAt(0).HtmlContent.ToString())
        </div>
    </div>
</div>

<script>
        $(document).ready(function () {
            $('table.highchart').highchartTable();
            $('table.highchart').remove();
        });
</script>

