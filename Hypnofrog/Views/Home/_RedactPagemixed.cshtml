@model Hypnofrog.DBModels.Page
@{
    Session["PageId"] = Model.PageId;
    ViewBag.Style = Model.Color == "dark" ? "dark" : Model.Color == "orange" ? "red" : "gray";
}
<link href="~/Content/@ViewBag.Style-theme.css" rel="stylesheet" />

<div class="row">
    <div class="col-md-2 col-sm-2 col-xs-2">
        <a href="@Url.Action("PreviewSite", "Home", new { siteid  = Model.SiteId }) " class="icons">
            <i class="fa fa-eye"></i>
        </a>
        <i class="fa fa-floppy-o icons" id="Savebtn" onclick="dosmth();"></i>
    </div>
    <div class="col-md-6 col-sm-6 col-xs-6 col-md-offset-1 col-sm-offset-1 col-xs-offset-1">
        @Html.TextAreaFor(model => model.Title, new { @id = "title" })
    </div>
    <div class="col-md-1 col-sm-1 col-xs-1 col-md-offset-1 col-sm-offset-1 col-xs-offset-1">
        <a href="@Url.Action("DeletePage", "Home", new { pageid  = Model.PageId }) ">
            <i class="icons fa fa-trash-o"></i>
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        @Html.TextArea("HtmlContent[0]", Model.Contents.ElementAt(0).HtmlContent.ToString(), new { @id = "edit1" })
    </div>
</div>

<div class="row">
    <div class="col-md-6 col-xs-6 col-sm-6">
        @Html.TextArea("HtmlContent[1]", Model.Contents.ElementAt(1).HtmlContent.ToString(), new { @id = "edit2" })
    </div>
    <div class="col-md-6  col-sm-6 col-xs-6">
        @Html.TextArea("HtmlContent[2]", Model.Contents.ElementAt(2).HtmlContent.ToString(), new { @id = "edit3" })
    </div>
</div>

