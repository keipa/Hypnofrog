@model IEnumerable<Hypnofrog.DBModels.Site>
@using Microsoft.AspNet.Identity
<link href="~/Content/star-rating.css" rel="stylesheet" />
<link href="~/Content/star-rating.min.css" rel="stylesheet" />
<link href="~/Content/userprofilestyle.css" rel="stylesheet" />
<script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.2/jquery.min.js'></script>
<script src="~/Scripts/star-rating.js"></script>
<script src="~/Scripts/star-rating.min.js"></script>
<script src="~/Content/themes/krajee-svg/theme.js"></script>


@if (Model.Count() > 0)
{
    for (int i = 0; i < Model.Count(); i += 3)
    {
        <div class='courses cards'>

            @for (int j = i; (j < i + 3) && (j < Model.Count()); j++)
            {
                <div class='course'>
                    <div class="imageratingcontainer" style="position: relative; z-index: 1000">
                        @if (User.Identity.IsAuthenticated && Model.ElementAt(j).UserId != User.Identity.GetUserName())
                        {
                            <input id="input-@j" class="rating rating-loading" data-show-clear="false" data-show-caption="false" value="@Model.ElementAt(j).Rate" data-min="0" data-max="5" data-step="1" data-size="xs" />
                        }
                        else
                        {
                            <input id="input-@j" class="rating rating-loading" data-readonly="true" data-show-clear="false" data-show-caption="false" value="@Model.ElementAt(j).Rate" data-min="0" data-max="5" data-step="1" data-size="xs" />
                        }
                        <div id="results-@j" style="text-align: center;color: white;background-color: cornflowerblue;"></div>
                        <div class='blur asset'>
                            <script type="text/javascript">
                                $('#input-@j').on('rating.change', function (event, value, caption) {
                                    $('#results-@j').load("http://localhost:61065/Home/UpdateRating?userid=@User.Identity.GetUserId()&siteid=@Model.ElementAt(j).SiteId" + "&value=" + value);
                                });
                            </script>
                            @{ 
                                string newbcolor;
                                string newfcolor;
                                try
                                {
                                    var elem = Model.ElementAt(j);
                                    var backgroundcolor = elem.Pages.ElementAt(0).Color;
                                     newbcolor = backgroundcolor == "orange" ? "FF7C00" : backgroundcolor == "dark" ? "0C0114" : "9AC6BC";
                                     newfcolor = backgroundcolor == "orange" ? "A63400" : backgroundcolor == "dark" ? "BDAECD" : "37474f";
                                }
                                catch(Exception)
                                {
                                     newbcolor = "9AC6BC";
                                     newfcolor = "37474f";
                                }
                            }
                            <img src="http://dummyimage.com/400x150/@newbcolor/@newfcolor&text=@Model.ElementAt(j).Title.Replace(' ', '+')">
                        </div>
                    </div>

                    <div class='details'>
                        <div class="row">
                            <div class="title col-md-10">
                                <span>@Resources.Resource.Name</span><br>
                                <span>@Model.ElementAt(j).Title</span>
                            </div>
                            @if (Model.ElementAt(j).UserId == User.Identity.Name || User.IsInRole("Admin"))
                            {
                                <div class="col-md-2">
                                    <a class="modal-link" href="@Url.Action("Settings", "Home", new { siteid = Model.ElementAt(j).SiteId })" style="cursor:pointer;">
                                        <i class="fa fa-cog"></i>
                                    </a>
                                </div>
                            }
                        </div>
                        <div class="description">
                            <span>@Resources.Resource.Description</span><br>
                            <span>@Model.ElementAt(j).Description</span>
                        </div>
                        <div class='language'>
                            @if (Model.ElementAt(j).Tags.Split(',').Count() != 1 || Model.ElementAt(j).Tags.Split(',')[0] != "")
                            {
                                <span>@Resources.Resource.Tags</span><br>
                            }
                            @foreach (var item in Model.ElementAt(j).Tags.Split(','))
                            {<span class="label label-success">@item</span><span> </span>}

                        </div>
                        <span class='actions'>
                            <a href="@Url.Action("PreviewSite", "Home", new { username = Model.ElementAt(j).UserId, siteurl = Model.ElementAt(j).Url }) ">
                                <i class='fa fa-eye'></i>
                            </a>
                            @if (Model.ElementAt(j).UserId == User.Identity.Name || User.IsInRole("Admin"))
                            {
                                <a href="@Url.Action("EditSite", "Home", new { siteid = Model.ElementAt(j).SiteId }) ">
                                    <i class='fa fa-pencil'></i>
                                </a>
                                <a data-ajax="true" data-ajax-mode="replace" href="@Url.Action("DeleteSite", "Home",new { siteid = Model.ElementAt(j).SiteId })">
                                    <i class='fa fa-trash'></i>
                                </a>
                            }
                        </span>
                    </div>
                </div>
            }
        </div>

    }
}


<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script type="text/javascript">
    $(function () {
        $('#deletebutton').click(function () {
            $('#ajax-del').submit();
        });
    });
</script>
