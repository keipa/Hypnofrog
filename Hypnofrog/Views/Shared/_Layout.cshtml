<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/bundles/dropzonescss")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery-ui")

    @Styles.Render("~/bundles/froalacss")
    @Styles.Render("~/bundles/froala-plugins-css")
</head>
<body>
    <div id="loadingDiv" class="loader"></div>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @if (ViewBag.RedactorEnable != true)
                {
                    @Html.ActionLink("Hypnofrog", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                }
                else
                {
                    @Html.ActionLink((string)ViewBag.Title, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                }
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (ViewBag.RedactorEnable == true)
                    {
                        for (int i = 0; i < ((List<string>)ViewBag.PageTitles).Count(); i++)
                        {
                            <li>@Ajax.ActionLink(Html.Raw(((List<string>)ViewBag.PageTitles)[i]).ToString(), ViewBag.Preview == true ? "PreviewShowPage" : "ShowPage", new { pageid = ((List<int>)ViewBag.PageIds)[i] }, new AjaxOptions() { UpdateTargetId = "page-redactor" })</li>
                        }
                        if (ViewBag.Preview != true)
                        {
                            <li>@Html.ActionLink("+ Добавить страницу", "AddPage", "Home", new { siteid = ViewBag.SiteId }, new { })</li>
                        }

                    }
                    else
                    {
                        if (User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Администрирование", "Admin", "Home")</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Пользователи", "Users", "Home")</li>
                        }
                    }
                </ul>
                <ul class="nav navbar-nav navbar-left">
                    <li>
                        @Html.ActionLink("Поиск", "Search", "Home")
                    </li>
                </ul>

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content" id="rendbody">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery.caret.min.js"></script>
    <script src="~/Scripts/jquery.tag-editor.min.js"></script>
    <link href="~/Scripts/jquery.tag-editor.css" rel="stylesheet" />
    <link href="http://code.jquery.com/ui/1.10.2/themes/smoothness/jquery-ui.css" rel="Stylesheet"></link>
    <script src="http://code.jquery.com/ui/1.10.2/jquery-ui.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/popup")
    @Scripts.Render("~/bundles/froalajs")
    @Scripts.Render("~/bundles/froala-plugins-js")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/dropzonescripts")

    <script src="~/Scripts/jquery.signalR-2.2.1.js"></script>
    <script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>

    <script src="/signalr/hubs"></script>


    <script type="text/javascript">
        if (Notification.permission !== "granted")
            Notification.requestPermission();
        $(function () {
            var chat = $.connection.chatHub;
            chat.client.broadcastMessage = function (text, link) {
                if (text != 'Поздравляем! Вы получили достижение: ') {
                    var notification = new Notification('', {
                        body: text,
                        icon: 'http://i493.photobucket.com/albums/rr299/0khi/Futurama/hypnofrog.gif',
                    });
                    notification.onclick = function () {
                        window.open(link);
                    };
                }
            };
            $.connection.hub.start().done(function () {
                //$('#sendmessage').click(function () {
                //    //chat.server.send('kek', $('#message').val());
                //});
                chat.server.send('@ViewBag.Achievment');

            });
        });
    </script>
    <div id="modal-container" class="modal fade" tabindex="-1" role="dialog">
        <div id="modal-content">
        </div>
    </div>
</body>
</html>
