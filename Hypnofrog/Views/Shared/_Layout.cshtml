<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/bundles/dropzonescss")

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jquery-ui")
    @Styles.Render("~/bundles/froalacss")
    @Styles.Render("~/bundles/froala-plugins-css")
</head>
<body>
    <div id="loadingDiv" class="loader"></div>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @if (ViewBag.RedactorEnable == true)
                {
                    @Html.ActionLink("Hypnofrog", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                }
                else
                {
                    @Html.ActionLink((string)ViewBag.Title, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                }
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (ViewBag.RedactorEnable == true)
                    {
                        foreach (var elem in (List<string>)ViewBag.PageTitles)
                        {
                            <li>@Html.ActionLink(Html.Raw(elem).ToString(), "Index", "Home")</li>
                        }
                        <li>@Html.ActionLink("+ Добавить страницу", "AddPage", "Home", new { siteid = ViewBag.SiteId }, new { })</li>

                    }
                    else
                    {
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        if (User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Администрирование", "Admin", "Home")</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Пользователи", "Users", "Home")</li>
                        }
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content" id="rendbody">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/popup")
    @Scripts.Render("~/bundles/froalajs")
    @Scripts.Render("~/bundles/froala-plugins-js")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/dropzonescripts")
    <div id="modal-container" class="modal fade" tabindex="-1" role="dialog">
        <div id="modal-content">
        </div>
    </div>
</body>
</html>
